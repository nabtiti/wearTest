<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MobileActivity">

    <TextView
        android:id="@+id/syncDataItemTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Sync DataItem:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/syncDataItemEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/syncDataItemTextView"
        android:hint="Insert DataItem to Sync with Wear" />


    <Button
        android:id="@+id/syncDataItemButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/syncDataItemEditText"
        android:onClick="syncDataItem"
        android:text="Sync DataItem" />

    <Button
        android:id="@+id/startActivityButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startActivityTextView"
        android:onClick="sendStartActivityMessage"
        android:text="Start on Wear" />

    <TextView
        android:id="@+id/sendMessageTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/syncDataItemButton"
        android:layout_marginTop="10dp"
        android:text="settings"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sendMessageEditText"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:hint="count" />

    <EditText
        android:id="@+id/SHAKE_THRESHOLD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0598XXXXXXX"
        android:hint="SHAKE_THRESHOLD" />
    <EditText
        android:id="@+id/MOBILE"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="3000"
        android:hint="Mobile Number" />



    <Button
        android:id="@+id/sendMessageButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendMessageEditText"
        android:onClick="sendMessage"
        android:text="Send settings to Wear" />





</LinearLayout>
